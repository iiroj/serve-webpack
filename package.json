{
  "name": "serve-webpack",
  "version": "0.0.4",
  "description": "A simple and fast webpack development server with HMR support",
  "author": "Iiro JÃ¤ppinen <iiro@jappinen.fi> (https://iiro.fi)",
  "license": "MIT",
  "homepage": "https://github.com/iiroj/serve-webpack",
  "repository": "github:iiroj/serve-webpack",
  "bugs": "https://github.com/iiroj/serve-webpack/issues",
  "main": "dist/handler.js",
  "bin": "dist/bin.js",
  "files": [
    "dist",
    "client.js"
  ],
  "engines": {
    "node": ">=12.10"
  },
  "scripts": {
    "lint": "eslint --ext .ts,.js .",
    "typecheck": "tsc -p tsconfig.json",
    "prebuild": "rimraf dist client.js",
    "build": "tsc --build tsconfig.build.json tsconfig.client.json",
    "watch": "npm run build -- --watch",
    "version": "standard-version --no-verify"
  },
  "lint-staged": {
    "*.{ts}": "eslint --ext .ts"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "standard-version": {
    "scripts": {
      "prerelease": "npm run lint && npm run typecheck && npm run build"
    }
  },
  "peerDependencies": {
    "webpack": ">=4.41.5"
  },
  "dependencies": {
    "lodash.defaultsdeep": "^4.6.1",
    "serve-handler": "^6.1.2",
    "ws": "^7.2.1",
    "yargs": "^15.0.2"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^8.2.0",
    "@types/lodash.defaultsdeep": "4.6.6",
    "@types/node": "^13.1.1",
    "@types/serve-handler": "6.1.0",
    "@types/webpack": "4.41.0",
    "@types/webpack-env": "1.14.1",
    "@types/webpack-merge": "^4.1.5",
    "@types/ws": "6.0.4",
    "@types/yargs": "^13.0.4",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.13.0",
    "commitlint": "^8.2.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-node": "11.0.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "3.1.0",
    "lint-staged": "^10.0.0-beta.14",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "standard-version": "^7.0.1",
    "typescript": "^3.7.4",
    "webpack": ">=4.41.5"
  },
  "keywords": [
    "dev-server",
    "hmr",
    "hot module replacement",
    "hot reload",
    "hot",
    "serve",
    "server",
    "webpack"
  ]
}
